<div class="listeditPage">
  <div class="container">
    <%= form_with model: @customer, html: { class: 'listForm' }, local: true do |f| %>
      <% if @customer.errors.any? %>
        <p class="text-danger">タイトルは1～255文字以内で入力してください</p>
      <% end %>
      <%= f.label :なまえをかえる %>
      <%= f.text_field :name, class: "form-control listName", placeholder: "リスト名" %>
      <div class="text-center"><%= f.submit "編集する", class: "submitBtn" %></div>
    <% end %>
  </div>
</div>