<div class="listeditPage">
  <div class="container">
    <% if @customer.email == 'guest@example.com' %>
      　<h4>ゲストユーザーはユーザー情報の編集ができません。</h4>
    <% else %>
    <%= form_with model: @customer, html: { class: 'listForm' }, local: true do |f| %>
      <% if @customer.errors.any? %>
        <p class="text-danger">名前は1～20文字以内で入力してください</p>
      <% end %>
      <%= f.label :名前をかえる %>
      <%= f.text_field :name, class: "form-control listName", placeholder: "名前" %>
  </div>
</div>

<div class="row mt-5 d-flex justify-content-center">
  <div class="col-2">
    <%= f.submit"編集内容を保存",class: "btn btn-sm btn-success" %>
    <% end %>
  </div>
    <div class="col-1">
    <%= link_to "退会する",customer_unsubscribe_path(@customer.id), class: 'btn btn-sm btn-danger' %>
    </div>
    <% end %>
</div>
