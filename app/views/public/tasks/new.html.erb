<div class="listnewPage">
  <div class="container">
    <%= form_with model: @task, url: { action: :create }, class: "new_list", local: true do |f| %>
      <% if @task.errors.any? %>
        <p class="text-danger">タイトルは1～255文字以内で入力してください</p>
      <% end %>
      <%= f.select :privacy, [["公開", 1], ["非公開", 2]], include_blank: "選択して下さい" %>
      <%= f.label :title %>
      <%= f.text_field :title,  class: "form-control listName", placeholder: "タイトル" %>
      <%= f.text_field :body,  class: "form-control listName", placeholder: "内容" %>
      <%= f.text_field :reward,  class: "form-control listName", placeholder: "欲しい商品や観たいビデオのURL" %>
      <div class="text-center"><%= f.submit "作成", class: "btn btn-info " %></div>
    <% end %>
  </div>
</div>